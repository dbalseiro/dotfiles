map ,, <C-^>
nmap } gt
nmap { gT
noremap ,. :tabonly<Return>

set editor='/usr/local/bin/mvim -f'


" A => presentation mode
nmap A :set gui!=tabs,notabs,navigation,nonavigation<cr>

" > => borrar todo a la derecha; < => a la izquierda
js << EOF
mensaje = function(numero) {
    return "Está por cerrar " + numero + " pestañas ¿Desea continuar?";
};

doremove = function(tab, numero) {
    if (numero <= 1 || confirm(mensaje(numero))) {
        tabs.remove(tab, numero);
    }
};

closeAllToRight = function() {
    var current = tabs.getTab();
    var nextTab = current.nextElementSibling;
    var fromIndex = tabs.index(nextTab);
    var tabsToDelete = tabs.count - fromIndex;
    doremove(nextTab, tabsToDelete);
};

closeAllToLeft = function() {
    var current = tabs.getTab();
    var currentIdx = tabs.index(current);
    var firstTab = tabs.getTab(0);
    doremove(firstTab, currentIdx);
};
EOF

nmap > :js closeAllToRight()<cr>
nmap < :js closeAllToLeft()<cr>

command! closealltoright :js closeAllToRight()
command! closealltoleft :js closeAllToLeft()

